{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5", "ESNext", "ES6"],
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
